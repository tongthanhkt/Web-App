<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=, initial-scale=1.0">
    <title>Search Results</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">
    <link rel="stylesheet" href="/style.css">
</head>

<body>
    <nav>
        <h2><a href="../../lecturer/lecturer_UI"><button type="button" class="btn btn-outline-warning">Home
                    Page</button></a></h2>
        <ul>
            <li>
                <div class="dropdown">
                    <a><button type="button" class="btn btn-outline-warning">Profile</button></a>
                    <div class="dropdown-content" style="border-radius: 5px; padding: 5px">
                        <a href="/lecturer/lecturer_view_profile"><button type="button"
                                class="btn btn-outline-warning">View Profile</button></a>
                        <a href="/lecturer/lecturer_change_profile"><button type="button"
                                class="btn btn-outline-warning">Change Profile</button></a>
                        <a href="/lecturer/lecturer_change_password"><button type="button"
                                class="btn btn-outline-warning">Change Password</button></a>
                    </div>
                </div>
            </li>
            <li>
                <a href="/"><button type="button" class="btn btn-outline-warning">Log
              out</button></a>
            </li>
        </ul>
    </nav>

    <div class="container mt-4">

        <div class="card" style="border-radius: 25px;  font-family: Times, " Times New Roman",Helvetica, sans-serif;">
            <div class="card-header">
                All results found:
            </div>

            <div class="card-body">
                <div class="container">
                    <table class="table table-bordered" id="table">
                        <thead>
                            <tr style="background-color: #9ed499; font-family: Times, " Times New Roman",Helvetica,
                                sans-serif;">
                                <th scop="col">Number</th>
                                <th scope="col">StudentID</th>
                                <th scope="col">Fullname</th>
                                <th scope="col">Midterm</th>
                                <th scope="col">Final</th>
                                <th scope="col">Total</th>
                                <th scope="col">Change</th>
                            </tr>
                        </thead>
                        <tbody id="table-body"></tbody>
                    </table>
                </div>
            </div>

            {{#if message}}
            <h4 class="alert alert-danger mt-4">{{message}}</h4>
            {{/if}}
        </div>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-gtEjrD/SeCtmISkJkNUaaKMoLD0//ElJ19smozuHV6z3Iehds+3Ulb9Bn9Plx0x4"
            crossorigin="anonymous"></script>
        <script src="https://code.jquery.com/jquery-3.6.0.slim.js"
            integrity="sha256-HwWONEZrpuoh951cQD1ov2HUK5zA5DwJ1DNUXaM6FsY=" crossorigin="anonymous"></script>
        <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>

        <script type="text/javascript">
            $(document).ready(function () {

                $("#dialogSuccess").hide();
                var data = "{{data}}";
                data = data.split("  ");
                for (i = 0; i < data.length; i++) {
                    if (data[i] != 0) {
                        temp = data[i];
                        temp = temp.split("||");
                        var html = `<tr>
                            <th scope="row">${i + 1}</th>
                            <td>${temp[0]} <input type="hidden" value='${temp[0]}' id="StudentId"></td>
                            <td>${temp[1]}</td>
                            <td><input type="text" value='${temp[2]}' id="Midterm"></td>
                            <td><input type="text" value='${temp[3]}' id="Final"></td>
                            <td><input type="text" value='${temp[4]}' id="Total"></td>
                            <td><input type="submit" value="Change"  id="submitEdit"></td>
                        </tr>`;
                        document.getElementById("table-body").insertRow().innerHTML = html;
                    }
                }

                $("#submitEdit").click(function (e) {

                    let midterm = document.getElementById('Midterm').value;
                    let final = document.getElementById("Final").value;
                    let total = document.getElementById("Total").value;
                    let studentId = document.getElementById("StudentId").value;
                    let str = window.location.href.split("/")[5].split(".");
                    let subId = str[0];
                    let year = str[1];
                    let semester = str[2];
                    let classId = str[3];

                    let obj = { midterm, final, total, subId, year, semester, classId, studentId };
                    let url = window.location.origin + "/lecturer/lecturer_edit_student2/edit";
                    $.ajax({
                        url: url,
                        type: 'post',
                        contentType: 'application/x-www-form-urlencoded',
                        data: obj,
                        success: function (data, textStatus, jQxhr) {
                            if (data.code == 200) {
                                $("#dialogSuccess").show();
                                document.getElementById("msgSuccess").innerHTML = "UPDATE SUCCESSFULLY ! ";
                            } else {
                                $("#dialogSuccess").show();
                                document.getElementById("msgSuccess").innerHTML = "FAIL TO UPDATE ! ";
                            }
                        },
                        error: function (jqXhr, textStatus, errorThrown) {
                            console.log(errorThrown);
                        }
                    });
                    e.preventDefault();
                });
            });
        </script>

        <div id="dialogSuccess" title="Basic dialog">
            <p id="msgSuccess" style="color: blue;"></p>
        </div>


</body>

</html>